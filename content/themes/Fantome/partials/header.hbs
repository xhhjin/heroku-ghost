<header class="main-header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>	
	{{#if @blog.logo}}
		<a class="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
	{{/if}}
	
	<div class="logo-wrap">
		<h1 class="blog-title">
			<a title="{{@blog.title}}" href='{{@blog.url}}'>{{{@blog.title}}}</a>
		</h1>

		<p class="blog-description">
			<a title="{{@blog.title}}" href='{{@blog.url}}'>{{@blog.description}}</a>
		</p>
	</div>
</header>